<style>
input[type=submit] {
  background-color: #2196F3;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 100;
}
</style>
<h1>Update Spare part</h1>

<form action="/spare/<%= @spare.id%>/edit" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
    <input  type="hidden" name="spare[factory_id]" value="<%= @spare.factory_id%>">
  <label for="code">Code</label><br>
  <input type="text" name="spare[code]" value = "<%= @spare.code%>" required><br>
  <label for="description">Description</label><br>
  <input type="text" name="spare[description]" value = "<%= @spare.description%>" required><br>
  <label for="manufacture">Manufacture</label><br>
  <input type="text" name="spare[manufacture]" value = "<%= @spare.manufacture%>"><br>
  <label for="partno">Part No</label><br>
  <input type="text" name="spare[part_no]" value = "<%= @spare.part_no%>"><br>
  <label for="qty">Stock Qty</label><br>
  <input type="text" name="spare[qty]" value = "<%= @spare.qty%>"><br>
  <br>
  <input type="submit" value="Update"><br>
  <br>
  <% @eq.each do |eacheq| %>
    <input id="<%= eacheq.tag_no %>" type="checkbox" name="eq[]" value="<%= eacheq.id %>" <%='checked' if @spare.equipment.include?(eacheq) %>><%= eacheq.tag_no %><br>
  <% end %>
 </form>
